<Window x:Class="Csharp2_ControlTower.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Csharp2_ControlTower"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Specifics display labels -->
                <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label x:Name="nameLbl" Content="Name"/>
                    <Label x:Name="flightIDlbl" Content="Flight ID"/>
                    <Label x:Name="descriptionLbl" Content="Description"/>
                    <Label x:Name="flightTimeLbl" Content="Flight Time"/>
                </StackPanel>

                <!-- Airplane specifics display-->
                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBox x:Name="nameTxtBox" IsReadOnly="True" MinWidth="100" MaxWidth="100" Margin="5"/>
                    <TextBox x:Name="flightIDTxtBox" IsReadOnly="True" MinWidth="100" MaxWidth="100" Margin="5"/>
                    <TextBox x:Name="descriptionTxtBox" IsReadOnly="True" MinWidth="100" MaxWidth="100" Margin="5"/>
                    <TextBox x:Name="flightTimeTxtBox" IsReadOnly="True" MinWidth="100" MaxWidth="100" Margin="5"/>
                </StackPanel>
            </Grid>

            <!-- Airplanes display -->
            <ListBox x:Name="airplaneListBox" Grid.Row="0" Grid.Column="1" Margin="10"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Add button -->
            <Button x:Name="addBtn" Grid.Column="0" Content="Add Plane" Margin="10" Click="AddBtn_Click"/>

            <!-- Take off button -->
            <Button x:Name="takeOffBtn" Grid.Column="1" Content="Take Off" Margin="10" Click="TakeOffBtn_Click"/>
        </Grid>

        <ListView x:Name="flightDisplayLstView" Grid.Row="2" Margin="10"/>
    </Grid>
</Window>
